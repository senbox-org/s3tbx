                </jobParameter>
                <jobParameter>
                    <name>calvalus.beam.bundle</name>
                    <value>snap-2.0-beta-0.8</value>
                </jobParameter>
                <jobParameter>
                    <name>calvalus.system.snap.dataio.reader.tileHeight</name>
                    <value>64</value>
                </jobParameter>
                <jobParameter>
                    <name>calvalus.system.snap.dataio.reader.tileWidth</name>
